
<div class="jumbotron"> 
  <%= form_for(@article) do |f| %>
    <% if @article.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@article.errors.count, "error") %> Hey! fijate :C </h2>
        <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>

    <% end %>

    <div class="form-group">
      <%= f.label :title, :for => "article_title" %><br>
      <%= f.text_field :title, :class => "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label :body, :for => "article_body" %><br>
      <%= f.text_area :body, :class => "form-control", :rows => "6" %><br>
    </div>
    <div class="form-group">
      <%= f.label :photo, :for => "article_photo" %><br>
      <%= f.file_field :photo, :class => "form-control"  %><br>
      <br>
    </div>
    <%= f.submit :class => "btn btn-success"%>
    <br>
  <% end %>

</div>
