
  <%= form_for @article, :html => { :role => "form"}  do |f| %>
    <% if @article.errors.any? %>
      <%= render 'layouts/error_messages', :f => @article %>
    <% end %>

    <div class="form-group">
      <%= f.label 'Título', :for => :title %>
      <%= f.text_field :title, :class => "form-control",:autofocus => true %>
    </div>
    <div class="form-group">
      <%= f.label 'Cuerpo', :for => :body %>
      <%= f.text_area :body, :class => "form-control", :rows => "20" %>
    </div>
    <div class="form-group">
      <%= f.label 'Imágen de cabecera', :for => :photo %>
      <%= f.file_field :photo, :class => "form-control" %>
    </div>
    
    <div class="form-group">
       <%= f.fields_for :sources do |source| %>
          <%= render 'article_sources', :f => source %>
        <% end %>
    </div>
    
    <div class="form-group">
      <%= f.fields_for :art_objects do |art_object| %>
        <%= render 'articles_art_objects', :f => art_object %>
      <% end %>
    <div>

    <%= f.submit  "Guardar", :class => "btn btn-primary"%>
  <% end %>


